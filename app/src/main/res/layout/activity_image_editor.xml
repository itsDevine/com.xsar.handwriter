<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".image_editor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/upperToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/imagesSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_semibold"
        android:text="0/50"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/upperToolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/upperToolbar" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/save_text_bg"
        android:fontFamily="@font/raleway_semibold"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/upperToolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/upperToolbar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#33000000"
        app:layout_constraintBottom_toTopOf="@+id/lowerToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upperToolbar"
        app:layout_constraintVertical_bias="0.254" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/lowerToolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/customcamlt1"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/editorGallery"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/customcamgallery"
        app:layout_constraintBottom_toBottomOf="@id/lowerToolbar"
        app:layout_constraintLeft_toLeftOf="@id/lowerToolbar"
        app:layout_constraintRight_toLeftOf="@id/cropButton"
        app:layout_constraintTop_toTopOf="@id/lowerToolbar" />

    <Button
        android:id="@+id/cropButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/editbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/editorGallery"
        app:layout_constraintRight_toLeftOf="@id/addButton"
        app:layout_constraintTop_toTopOf="@id/lowerToolbar" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/addbutton1"
        app:layout_constraintBottom_toBottomOf="@id/lowerToolbar"
        app:layout_constraintLeft_toRightOf="@id/cropButton"
        app:layout_constraintRight_toLeftOf="@id/retakeButton"
        app:layout_constraintTop_toTopOf="@id/lowerToolbar" />

    <Button
        android:id="@+id/retakeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/retakebutton"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/addButton"
        app:layout_constraintRight_toLeftOf="@id/editorDelete"
        app:layout_constraintTop_toTopOf="@id/lowerToolbar" />


    <Button
        android:id="@+id/editorDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="@id/lowerToolbar"
        app:layout_constraintLeft_toRightOf="@id/retakeButton"
        app:layout_constraintRight_toRightOf="@id/lowerToolbar"
        app:layout_constraintTop_toTopOf="@id/lowerToolbar" />

    <View
        android:id="@+id/loadingBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#555555"/>

    <TextView
        android:id="@+id/loadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:textAllCaps="true"
        android:text="Recognizing Text"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <ImageView
        android:id="@+id/loadingImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/loading_animation"
        android:background="@color/transparent"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/loadingTextView"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>