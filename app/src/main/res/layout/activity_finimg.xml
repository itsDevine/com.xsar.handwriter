<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/flinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageButton
            android:id="@+id/imagesCaptured"
            android:layout_width="170dp"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/lightGrey"
            />

    </LinearLayout>



    <Button
        android:id="@+id/imagesNumberFinal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/customcamnumber"
        android:textColor="@color/white"
        android:text="12"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/flinearLayout"
        app:layout_constraintRight_toRightOf="@id/flinearLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>
