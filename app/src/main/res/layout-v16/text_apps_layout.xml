<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:scrollbars="none"
    android:weightSum="1">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_file_but"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@drawable/grey_ripple"
        android:onClick="ActionMode"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/txtfileicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:drawablePadding="2dp"
            android:gravity="top|start"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/linearLayout2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_file_but1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="left|start"
                android:paddingTop="15dp"
                android:text="New Text"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/text_file_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="left|start"
                    android:text="New Text"
                    android:textColor="@color/ColourGrey"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/text_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="New Text"
                    android:textSize="12dp"
                    android:textColor="@color/ColourGrey"
                    app:layout_constraintBottom_toBottomOf="@+id/text_file_but1"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/MenuOptionsBgText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edit_text"
            app:layout_constraintStart_toStartOf="@+id/edit_text"
            app:layout_constraintTop_toTopOf="@+id/tool_bar4" />


        <ImageButton
            android:id="@+id/menuClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:src="@drawable/close_icon"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_file_but"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="end |center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/text_file_but"
            app:layout_constraintEnd_toEndOf="@+id/text_file_but"
            app:layout_constraintTop_toTopOf="@+id/text_file_but">


            <ImageButton
                android:id="@+id/renameButtonMenu"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:background="@color/transparent"
                android:src="@drawable/rename_primary" />

            <ImageButton
                android:id="@+id/deleteButtonMenu"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:background="@color/transparent"
                android:src="@drawable/ic_baseline_delete_24" />


            <ImageButton
                android:id="@+id/shareButtonMenu"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:background="@color/transparent"
                android:src="@drawable/share_primary" />


            <ImageButton
                android:id="@+id/showMenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:src="@drawable/vertical_options"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>





